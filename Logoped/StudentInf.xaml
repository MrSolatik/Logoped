<Page x:Class="Logoped.StudentInf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Logoped"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentInf">

    <Grid>
        <!--Фрагмент загрузки word документа в форму-->
        <DocumentViewer Name="documentViewer1" HorizontalAlignment="Left" Panel.ZIndex="-1" Width="795" Margin="0,0,0,40"/>
        <TextBox Height="344" HorizontalAlignment="Center" Margin="0,40,0,0"
                Name="SelectedFileTextBox" VerticalAlignment="Top" Width="780" />
        <Button Content="Поиск" Height="30" HorizontalAlignment="Left" Margin="0,415,680,0" Style="{StaticResource 52}"
                Name="BrowseButton" VerticalAlignment="Top" Width="120"  Click="BrowseButton_Click"/>
        <!--Конец-->
        <Button Name="SaveBtn" Content="Сохранить данные" Style="{StaticResource 52}" Background="#FF37649B"
                Click="SaveBtn_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 5" Width="130"/>
    </Grid>
</Page>
